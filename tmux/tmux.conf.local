# -- Clipboard ----------------------------------------------------------------

tmux_conf_copy_to_os_clipboard=false


# -- Window & Pane Creation ---------------------------------------------------

tmux_conf_new_window_retain_current_path=false
tmux_conf_new_pane_retain_current_path=true
tmux_conf_new_pane_reconnect_ssh=false
tmux_conf_new_session_prompt=false


# -- TPM (Plugin Manager) -----------------------------------------------------

tmux_conf_update_plugins_on_launch=true
tmux_conf_update_plugins_on_reload=true
tmux_conf_uninstall_plugins_on_reload=true

# plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'wfxr/tmux-power'
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
set -g @plugin 'wfxr/tmux-net-speed'
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'schasse/tmux-jump'

# plugin settings
set -g @jump-key 'j'
set -g @tmux_power_theme 'gold'
set -g @tmux_power_show_upload_speed true
set -g @tmux_power_show_download_speed true
set -g @tmux_power_time_icon 'ğŸ•˜'
set -g @tmux_power_prefix_highlight_pos 'L'


# -- Custom Settings ----------------------------------------------------------

# terminal
set -s set-clipboard on
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",*256col*:Tc"

# general
set -g mouse on
set -g display-panes-time 3000
set -g status-justify left

# pane navigation (without -r for immediate response)
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# pane swap
bind -r > swap-pane -D
bind -r < swap-pane -U

# split window (retain current path)
bind '"' split-window -c "#{pane_current_path}"
bind V split-window -c "#{pane_current_path}"
bind v split-window -h -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}" \; select-layout even-horizontal

# new window (retain current path)
bind c new-window -c "#{pane_current_path}"

# pane management
bind x killp
bind = select-layout even-horizontal
unbind o
bind o kill-pane -a

# window swap
bind 9 swap-window -t -1\; select-window -t -1
bind 0 swap-window -t +1\; select-window -t +1

# disable C-l clear (conflicts with vim-tmux-navigator)
bind -n C-l run 'true'


# -- TPM Run ------------------------------------------------------------------

run '~/.tmux/plugins/tpm/tpm'
